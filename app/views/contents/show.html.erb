<h1>映画の詳細ページ</h1>
<br>

<%= form_tag("/actors/create") do %>
  <h1>Castの作成と追加</h1>
  <textarea name ="name"></textarea> 
  
  <input type = "hidden" name ="id" value="<%= @content.id %>"></textarea> 
  
  <input type="submit" value="Cast登録" >
<% end %>
<br>
<h1>作品名</h1>
<h2><%= @content.name %></h2>
<br>
<h1>視聴日</h1>
<h2><%= @content.watchedday %></h2>



<%= link_to("作品名と視聴日の編集","/contents/#{@content.id}/edit") %>
<%= link_to("削除", "/contents/#{@content.id}/destroy",{method: "post"}) %>
      <table border="2">
  <tr>
    <th>出演者ID</th><th>出演者</th><th>出演回数</th>
  </tr>
  <% @content.actors.each do |actor| %>
  <tr>
    <td><%= actor.id %></td><td><%= link_to(actor.name, "/actors/#{actor.id}") %></td><td><%= actor.contents.count %></td>
  </tr>
 
  <% end %>
</table>






