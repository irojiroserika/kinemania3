<h1><%= link_to(@actor.name, "/actors/#{@actor.id}") %></h1>


<br>
<h1>出演作品</h1>
<br>
<table border="2">
  <tr>
    <th>作品ID</th><th>作品名</th><th>視聴日時</th>
  </tr>
  <% @actor.contents.each do |content| %>
  <tr>
    <td><%= content.id %></td><td><%= link_to(content.name, "/contents/#{content.id}") %></td><td><%= content.watchedday.to_date %></td>
  </tr>
 
  <% end %>
</table>

